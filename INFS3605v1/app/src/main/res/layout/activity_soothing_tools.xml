<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SoothingToolsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/soothingToolsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/soothingToolsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:text="Soothing Tools"
            android:textColor="#FFFFFF"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/soothingToolsMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tools to soothe and calm ourselves when we're anxious or distressed without using medication or resorting to any negative coping strategies."
            android:textColor="#FFFFFF"
            android:textSize="13dp"
            app:layout_constraintTop_toBottomOf="@id/soothingToolsTitle"
            app:layout_constraintStart_toStartOf="@id/soothingToolsTitle"
            app:layout_constraintEnd_toStartOf="@id/soothingToolsImage" />

        <ImageView
            android:id="@+id/soothingToolsImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/soothing_tools_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fragmentSoothingTools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/soothingToolsHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
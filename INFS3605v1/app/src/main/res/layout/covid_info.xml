<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@color/colorPrimaryButton">
    
    <TextView
        android:id="@+id/covidInfoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Covid Info Title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/covidInfoBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Covid Info Body"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/covidInfoTitle"
        app:layout_constraintStart_toStartOf="@id/covidInfoTitle"
        app:layout_constraintEnd_toEndOf="@id/covidInfoTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>
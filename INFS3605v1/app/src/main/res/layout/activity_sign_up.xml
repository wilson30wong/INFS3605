<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignUpActvity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signUpElement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/signUpTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/usernameTitleSignUp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Username"
            android:textSize="15dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/signUpTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/usernameSignUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:maxLength="25"
            android:maxLines="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/usernameTitleSignUp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/passwordTitleSignUp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Password"
            android:textSize="15dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/usernameSignUp"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/passwordSignUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPassword"
            android:maxLength="25"
            android:maxLines="1"
            android:textSize="20dp"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/passwordTitleSignUp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <CheckBox
            android:id="@+id/tosSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to the Terms of Service and Privacy Policy."
            android:layout_marginTop="25dp"
            android:buttonTint="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/passwordSignUp"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryButton"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/tosSignUp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/returnSignIn"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Already have an account? Sign In!"
            android:textSize="15dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/signUpButton"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>